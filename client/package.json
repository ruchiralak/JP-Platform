{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.7.5",
    "chart.js": "^4.4.4",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "electron": "^32.1.2",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "react-scripts": "^5.0.1",
    "reactjs-popup": "^2.0.6",
    "uuid": "^10.0.0",
    "vite": "^5.4.2",
    "wait-on": "^8.0.1",
    "web-vitals": "^2.1.4"
  },
  "build": {
    "appId": "Job-Post/MERN",
    "productName": "JP platform",
    "files": [
        "**/*"
    ],
    "directories": {
        "output": "dist"
    }
},
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm start\" \"npm run electron:start\"",
    "electron:build": "yarn build && electron-builder -c.extraMetadata.main=build/main.js",
    "electron:start": "wait-on tcp:3000 && electron .",
    "pack": "electron-packager . Job-Platform--platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron-builder": "^25.0.5",
    "electron-packager": "^17.1.2"
  }
}
